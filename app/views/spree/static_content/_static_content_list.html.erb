<% if page.foreign_link.present? %>
    <li class='not'><%= link_to page.title, page.foreign_link, {:target => "_blank"} %></li>
<% else %>
    <% page_uri = Rails.application.routes.named_routes[:spree].path.spec.to_s == '/' ?
            ('/' + I18n.locale.to_s + '/' + page.slug) :
            Rails.application.routes.named_routes[:spree].path.spec.to_s + page.slug %>
    <% page.title = page.title_fi if (I18n.locale.to_s == 'fi') %>
    <li class=<%= (request.fullpath.gsub('//', '/') == page_uri) ? 'current' : 'not' %> data-submenu='<%= page.submenu %>'><%= link_to page.title, page_uri %></li>
<% end %>